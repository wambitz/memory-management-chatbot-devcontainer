{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Memory Management Chatbot",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/membot",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "externalConsole": false,
      "preLaunchTask": "build",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Skip all std:: functions",
          "text": "skip -rfu ^std::",
          "ignoreFailures": true
        },
        {
          "description": "Skip all wxWidgets functions",
          "text": "skip -rfu ^wx",
          "ignoreFailures": true
        },
        {
          "description": "Skip system include files",
          "text": "skip -gfi /usr/include/*",
          "ignoreFailures": true
        }
      ]
    }
  ]
}