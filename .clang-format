---
Language:         Cpp
BasedOnStyle:  Google
IndentWidth: 4
TabWidth: 4
UseTab: Never
ContinuationIndentWidth: 4
ColumnLimit: 100                   # Lower limit to force more breaking
AccessModifierOffset: -4

# Pointer and reference alignment
DerivePointerAlignment: false      # Don't derive from existing code, enforce our style
PointerAlignment: Left             # int* ptr (not int *ptr)
ReferenceAlignment: Left           # int& ref (not int &ref)

# Constructor initializer list formatting
BreakConstructorInitializers: BeforeComma
ConstructorInitializerIndentWidth: 4
PackConstructorInitializers: Never

# Function parameter formatting
BinPackParameters: true            # Pack parameters in declarations/definitions
BinPackArguments: false            # Each argument on its own line in CALLS
AllowAllParametersOfDeclarationOnNextLine: true
AlignAfterOpenBracket: DontAlign   # Align parameters vertically
PenaltyReturnTypeOnItsOwnLine: 200 # Prefer keeping return type with function name

# Lambda formatting
AllowShortLambdasOnASingleLine: None      # Keep short lambdas on one line
LambdaBodyIndentation: OuterScope         # Align lambda body with signature
